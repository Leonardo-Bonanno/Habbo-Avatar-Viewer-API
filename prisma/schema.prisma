generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id
  nickname  String
  lastCheck DateTime?
  badges    Badge[]
}

model Badge {
  id          String   @id @default(uuid())
  code        String
  name        String
  description String
  detectedAt  DateTime

  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@unique([code, userId])
  @@index([userId])
}